{{> header}}
<div class="container">
    <h1 style="margin-top: 50px;">Add sneakers</h1>

    <div class="jumbotron">

        {{#if error}}
            <div class="alert alert-danger" style="text-align: center" role="alert">
                {{ error }}
            </div>
        {{/if}}

        <form action="/app/add" method="POST">
            <div class="form-group">
                <label for="image">Sneakers image url</label>
                <input name="image" type="text" class="form-control" id="image" required value="{{ data.image }}">
            </div>

            <div class="form-group">
                <label for="title">The name of the sneakers</label>
                <input name="title" type="text" class="form-control" id="title" required value="{{ data.title }}">
            </div>

            <div class="form-group">
                <label for="price">Sneakers price</label>
                <input name="price" type="number" class="form-control" id="price" required value="{{ data.price }}">
            </div>

            <div class="form-group">
                <label for="description">Sneakers description</label>
                <input name="description" type="text" class="form-control" id="description" required value="{{ data.description }}">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrf }}">
            <button class="btn btn-primary" style="margin-top: 20px" type="submit">Add sneakers</button>
        </form>
    </div>
</div>