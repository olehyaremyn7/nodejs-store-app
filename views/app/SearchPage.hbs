{{> header}}
<div class="container">
    <h1>Search results:</h1>
    <div class="jumbotron">
        {{#if filteredProducts.length}}
            <div class="row">
                {{#each filteredProducts}}
                    <div class="col-sm-6 col-md-4">
                        <div class="card card-prod">
                            <img src="{{ image }}" class="card-img-top" alt="{{ title }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ title }}</h5>
                                <h4 class="card-text card-price">{{ price }}</h4>
                                <a href="/app/products/{{ _id }}" target="_blank" class="btn btn-primary">Open sneakers page</a>
                                <a href="/app/products/{{ _id }}/edit?allow=true" class="btn btn-danger">Edit sneakers</a>
                                <form action="/app/cart/add" method="post">
                                    <input type="hidden" name="id" value="{{ _id }}">
                                    <button type="submit" class="btn btn-success btn-buy">Buy</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <p class="no-prod">No results!</p>
        {{/if}}
    </div>
</div>